{
  "name": "sass-pug",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "1": "--------------------------------- General ---------------------------------",
    "pug": "pug  -P ./src/ -o ./dist/",
    "css-compile-dev": "sass   --no-source-map --no-error-css --load-path=node_modules ./src/scss/:./dist/",
    "css-compile": "sass  --style compressed --no-source-map --no-error-css --load-path=node_modules ./src/scss/:./dist/",
    "html-mini": "html-minifier --input-dir . --output-dir . --remove-comments --collapse-whitespace --minify-css --minify-js --file-ext html",
    "css-prefix": "postcss --replace ./dist/*.css --use autoprefixer ",
    "2": "----------------------------------- Build ----------------------------------",
    "build:prod": "npm-run-all css-compile css-prefix pug html-mini",
    "build:dev": "npm-run-all css-compile-dev css-prefix pug",
    "3": "--------------------------------- Watch ------------------------------------",
    "watch": "npm-run-all --parallel watch-*",
    "watch-css-main": "nodemon --watch ./src/scss/ --ext scss --exec \"npm-run-all css-compile css-prefix\"",
    "watch-pug": "nodemon --watch ./src/ --ext pug --exec \"npm run pug\"",
    "4": "----------------------------------- Server -----------------------------------",
    "serve": "browser-sync start --server --files dist --serveStatic dist  --ignore=node_modules",
    "start": "npm-run-all --parallel watch serve"
  },
  "browserslist": [
    "last 3 versions",
    "> 0.5%",
    "IE 10"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "browser-sync": "^2.27.10",
    "html-minifier": "^4.0.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.54.0"
  }
}